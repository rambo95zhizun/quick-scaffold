{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "module": "CommonJS",
    "target": "ES2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "paths": {
      "@Src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
